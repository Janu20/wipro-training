@{
    Layout = "_Layout";
}

<style>
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    /* Override layout’s container so portal spans full width */
    .portal-container {
        margin: 0;
        padding: 0;
    }

    /* Flex wrapper for sidebar + content */
    .portal-wrapper {
        display: flex;
        min-height: calc(100vh - 56px); /* subtract navbar height */
    }

    /* Sidebar fixed to the very left */
    .sidebar {
        position: fixed;
        top: 56px; /* height of your shared navbar */
        left: 0;
        bottom: 0;
        width: 220px;
        background: linear-gradient(180deg, #ff6f91, #ffc75f);
        color: white;
        padding: 30px 20px;
        box-shadow: 2px 0 8px rgba(0,0,0,0.1);
        overflow-y: auto;
        z-index: 1000;
    }

        .sidebar h2 {
            text-align: center;
            font-size: 1.5em;
            margin-bottom: 30px;
        }

        .sidebar a {
            display: block;
            color: white;
            text-decoration: none;
            margin: 15px 0;
            padding: 10px 15px;
            border-radius: 8px;
            transition: background 0.2s;
        }

            .sidebar a:hover {
                background: rgba(255,255,255,0.2);
            }

    /* Main content area pushed right of fixed sidebar */
    .main-container {
        flex: 1;
        margin-left: 220px;
        display: flex;
        flex-direction: column;
    }

    /* Banner */
    .banner {
        margin: 20px;
        height: 250px;
        background: url('/banner.jpg') no-repeat center center/cover;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2.5em;
        font-weight: bold;
        text-shadow: 2px 2px 6px #000;
        border-radius: 0 0 20px 20px;
    }

    /* Cards content */
    .content {
        flex: 1;
        padding: 40px 20px;
        text-align: center;
    }

        .content h2 {
            font-size: 2em;
            color: #333;
            margin-bottom: 30px;
        }

    .cards {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }

    .card {
        background: #fff;
        border-radius: 16px;
        padding: 25px;
        width: 280px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.08);
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 24px rgba(0,0,0,0.15);
        }

        .card h3 {
            color: #ff6f61;
            margin-bottom: 10px;
        }

        .card p {
            color: #555;
            font-size: 0.95em;
        }

        .card a {
            display: inline-block;
            margin-top: 15px;
            padding: 10px 20px;
            background: #ff9671;
            color: white;
            text-decoration: none;
            border-radius: 30px;
            font-weight: bold;
            transition: background 0.2s;
        }

            .card a:hover {
                background: #ff6f61;
            }

    /* Portal footer */
    .portal-footer {
        background: #ffe0b2;
        color: #333;
        text-align: center;
        padding: 15px;
        border-top: 2px solid #ffb74d;
    }
</style>

<div class="portal-container container-fluid p-0">
    <div class="portal-wrapper">
        <!-- Sidebar -->
        <div class="sidebar">
            <h2>🌟 Wipro</h2>
            <a href="/Employee/Profile">👤 My Profile</a>
            <a href="/Leave/Index">🌴 Leave Requests</a>
            <a href="/Payroll/Index">💰 Pay Slips</a>
            <a href="/Announcements">📢 Announcements</a>
            <a href="/Settings">⚙️ Settings</a>
            <a href="/Account/Logout">🚪 Logout</a>
        </div>

        <!-- Main Content -->
        <div class="main-container">
            <div class="banner">Empowering Wiproites with Joy</div>

            <div class="content">
                <h2>What would you like to do today?</h2>
                <div class="cards">
                    <div class="card">
                        <h3>👤 My Profile</h3>
                        <p>View and update your personal information easily.</p>
                        <a href="/Employee/Profile">View</a>
                    </div>
                    <div class="card">
                        <h3>🌴 Leave Requests</h3>
                        <p>Apply for time off and check approval status.</p>
                        <a href="/Leave/Index">Apply</a>
                    </div>
                    <div class="card">
                        <h3>💰 Pay Slips</h3>
                        <p>Access your monthly salary records and tax info.</p>
                        <a href="/Payroll/Index">Check</a>
                    </div>
                    <div class="card">
                        <h3>📢 Announcements</h3>
                        <p>Catch up on the latest company news and updates.</p>
                        <a href="/Announcements">Read</a>
                    </div>
                </div>
            </div>

            <div class="portal-footer">
                &copy; @DateTime.Now.Year Wipro Limited. Stay curious, stay joyful!
            </div>
        </div>
    </div>
</div>
